= render "indexHeader"
= render "indexMain"
= render "indexBanner"
= render "indexFooter"
= render "indexBtn"
.contents.row
  - @items.each do |item|
    %p= item.name
    %span.name
      = item.price
    - item.images.each do |image|
      = image_tag image.src.url
    = link_to '編集', edit_item_path(item)
    = link_to '削除', item_path(item), method: :delete
