                        = item.price
                    .main__pickup__box__lists__list__body__data__like
                      = icon('fa', 'star')
                      0
                  .main__pickup__box__lists__list__body__data__tax
                    (税込)
                    - if current_user
                      - if current_user.id == item.seller.id
                        = link_to '編集', edit_item_path(item)
                        = link_to '削除', item_path(item), method: :delete
